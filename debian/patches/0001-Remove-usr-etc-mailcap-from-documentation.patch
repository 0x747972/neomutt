+++ neomutt/doc/manual.xml.head
@@ -9332,11 +9332,6 @@ audio/x-aiff                    aif aifc
         </listitem>
         <listitem>
           <para>
-            <literal>/usr/etc/mailcap</literal>
-          </para>
-        </listitem>
-        <listitem>
-          <para>
             <literal>/usr/local/etc/mailcap</literal>
           </para>
         </listitem>
